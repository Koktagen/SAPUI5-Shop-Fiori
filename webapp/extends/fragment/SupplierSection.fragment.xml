<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns="sap.m">
  <Table items="{Supplier/Products}">
    <columns>
      <Column >
        <Label text="{i18n>ProductName}"/>
      </Column>
      <Column >
        <Label text="{i18n>ProductPrice}"/>
      </Column>
    </columns>

    <items>
      <ColumnListItem>
        <Text text="{Name}"/>
        <Text text="{Price}"/>
      </ColumnListItem>
    </items>
  </Table>
</core:FragmentDefinition>